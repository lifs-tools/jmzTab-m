          <execution>
            <id>generate-python-client-lib</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <!-- target to generate python client code -->
              <inputSpec>${project.basedir}/src/main/resources/mzTab_m_swagger.yml</inputSpec>
              <language>python</language>
              <withXml>true</withXml>
              <generateApis>false</generateApis>
              <generateModelTests>true</generateModelTests>
              <generateSupportingFiles>true</generateSupportingFiles>
              <generateApiDocumentation>true</generateApiDocumentation>
              <output>${project.build.directory}/generated-sources/mztab-python</output>
            </configuration>
          </execution>
          <execution>
            <id>generate-r-client-lib</id>
            <goals>
              <goal>generate</goal>
            </goals>
            <configuration>
              <!--target to generate r client code--> 
              <inputSpec>${project.basedir}/src/main/resources/mzTab_m_swagger.yml</inputSpec>
              <language>r</language>
              <templateDirectory>${project.basedir}/src/main/swagger/r-templates</templateDirectory>
              <withXml>true</withXml>
              <generateApis>false</generateApis>
              <generateModelTests>true</generateModelTests>
              <generateSupportingFiles>true</generateSupportingFiles>
              <generateApiDocumentation>true</generateApiDocumentation>
              <configOptions>
                <packageName>rmztab</packageName>
              </configOptions>
              <output>${project.build.directory}/generated-sources/mztab-r</output>
              <modelPackage>mztab-r</modelPackage>
              <apiPackage>mztab-r</apiPackage>
              <invokerPackage>mztab-r</invokerPackage>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>io.github.swagger2markup</groupId>
        <artifactId>swagger2markup-maven-plugin</artifactId>
        <version>${swagger2markup.version}</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals>
              <goal>convertSwagger2markup</goal>
            </goals>
            <configuration>
              <swaggerInput>${project.basedir}/src/main/resources/mzTab_m_swagger.yml</swaggerInput>
              <outputDir>${project.build.directory}/generated-sources/mztab-adoc</outputDir>
              <config>
                <swagger2markup.markupLanguage>ASCIIDOC</swagger2markup.markupLanguage>
              </config>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>3.1.0</version>
        <executions>
          <execution>
            <id>make-adoc-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/asciidoc-zip.xml</descriptor> <!-- path to the descriptor -->
              </descriptors>
              <finalName>mztab-api-adoc-${project.version}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>make-python-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/python-zip.xml</descriptor> <!-- path to the descriptor -->
              </descriptors>
              <finalName>mztab-api-python-${project.version}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
          <execution>
            <id>make-r-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <descriptors>
                <descriptor>src/assembly/r-zip.xml</descriptor> <!-- path to the descriptor -->
              </descriptors>
              <finalName>mztab-api-r-${project.version}</finalName>
              <appendAssemblyId>true</appendAssemblyId>
            </configuration>
          </execution>
        </executions>
      </plugin>
