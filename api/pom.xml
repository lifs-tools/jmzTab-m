              <inputSpec>${project.basedir}/src/main/resources/mzTab_m_swagger.yml</inputSpec>
              <language>java</language>
              <templateDirectory>${project.basedir}/src/main/swagger/java-templates</templateDirectory>
              <library>jersey2</library>
              <modelPackage>de.isas.mztab1_1.model</modelPackage>
              <apiPackage>de.isas.mztab1_1.api</apiPackage>
              <invokerPackage>de.isas.mztab1_1.invoker</invokerPackage>
              <withXml>true</withXml>
              <generateApis>false</generateApis>
              <generateModelTests>true</generateModelTests>
              <additionalProperties>true</additionalProperties>
              <generateSupportingFiles>false</generateSupportingFiles>
              <generateApiDocumentation>false</generateApiDocumentation>
              <verbose>true</verbose>
              <configOptions>
                <!--<sourceFolder>swagger</sourceFolder>-->
                <!--<dateLibrary>joda</dateLibrary>-->
                <dateLibrary>java8</dateLibrary>
                <sourceFolder>mztab-java</sourceFolder>
                <useBeanValidation>true</useBeanValidation>
                <performBeanValidation>true</performBeanValidation>
                <withXml>true</withXml>
                <supportsInheritance>true</supportsInheritance>
              </configOptions>
              <output>${project.build.directory}/generated-sources/</output>
              <addCompileSourceRoot>true</addCompileSourceRoot>
            </configuration>
          </execution>
